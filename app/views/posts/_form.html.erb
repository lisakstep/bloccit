 <%= simple_form_for [topic, post] do |f| %>

  <%= f.input :title, as: :text, class:'form-control', placeholder: "Enter post title", :input_html => { :cols => 50 } %>
  <%= f.input :body, as: :text, class:'form-control', placeholder: "Enter post body", :input_html => { :cols => 50, :rows => 8 }%>  
  <%= f.submit "Save", class: 'btn btn-success' %>




<% end %>